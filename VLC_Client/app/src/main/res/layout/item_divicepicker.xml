<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cate_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/cate_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart = "10dp"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cate_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/status_red"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_circle_red_notfill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/status_green"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_circle_green_notfill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/status_red" />
</android.support.constraint.ConstraintLayout>