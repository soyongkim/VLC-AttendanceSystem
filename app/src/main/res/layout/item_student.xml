<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/student_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cate_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/app_logo"
        app:layout_constraintEnd_toEndOf="@id/student_image"
        app:layout_constraintStart_toEndOf="@id/student_image"
        app:layout_constraintTop_toBottomOf="@id/student_image"
        app:layout_constraintBottom_toBottomOf="@id/student_image"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_studentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:text = "enter content title"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cate_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/txt_studentNumber"
        android:text = "enter description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>