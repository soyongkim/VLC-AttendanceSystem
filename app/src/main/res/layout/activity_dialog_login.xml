<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fbd303"
            android:id="@+id/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <View
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/logo_student" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/login_title"
                android:id="@+id/textView"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#ffffff" />
        </LinearLayout>


        <EditText
            android:theme="@style/EditLoginStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:hint="Please Enter Your ID"
            android:drawableLeft="@drawable/ic_id"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/etId"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:theme="@style/EditLoginStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:hint="Please Enter Your Password"
            android:drawableLeft="@drawable/ic_pwd"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/etPassword"
            android:layout_below="@+id/etId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/colorAttendance"
        android:text="Login"
        android:onClick="onClick"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>